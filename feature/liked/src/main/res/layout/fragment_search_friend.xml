<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SearchFriendFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        style="@style/ToolbarStyle"/>

    <EditText
        android:id="@+id/searchFriendEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter friend's email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/searchFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Friend" />

    <TextView
        android:id="@+id/friendInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/connectFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Connection Request"
        android:visibility="gone" />



    <TextView
        android:id="@+id/tv_friendsFavouriteMediaList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello"/>
</LinearLayout>
